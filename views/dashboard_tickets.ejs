<!-- views/dashboard/tickets.ejs -->
<!doctype html>
<html>
<head>
    <% include layout/head %>
</head>

<body>

    <div class="demo-layout mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">

        <% include layout/header_drawer %>

        <main class="mdl-layout__content">
            <div class="page-content">
                <!-- My content here -->

                <div class="container">
                    <div class="col-sm-6 col-sm-offset-3">

                        <h1>Administrator dashboard</h1>
                            <% if (message !== "") { %>
                            <div class="alert alert-danger">
                                <%= message %>
                            </div>
                            <% } %>

                        <h5>tickets</h5>

                        <%= list_tickets.length %> tickets.

                        <table>
                          <tr>
                            <th>ticket_id</th>
                            <th>price</th>
                            <th>departure_id</th>
                            <th>client_id</th>
                          </tr>
                        <% for (var i = 0; i < list_tickets.length; i++) { %>
                         <tr>
                            <td><%= list_tickets[i].ticket_id %></td>
                            <td><%= list_tickets[i].price %></td>
                            <td><%= list_tickets[i].departure_id %></td>
                            <td><%= list_tickets[i].client_id %></td>
                          </tr>
                        <% } %>
                        </table>


                    </div>
                </div>
            </div>
        </main>
    </div>


</body>

</html>
