<!-- views/travel.ejs -->


<html>
<head>
    <% include layout/head %>
</head>

<body>

    <div class="demo-layout mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">

        <% include layout/header_drawer %>

        <main class="mdl-layout__content">
            <div class="page-content">
                <!-- My content here -->

                <div class="container">
                    <div class="col-sm-6 col-sm-offset-3">

                        <h1>Travel</h1>
                            <% if (message.length > 0) { %>
                            <div class="alert message">
                                <%= message %>
                            </div>
                            <% } %>

                        <p>Choose a travel</p>
                        <form action="/travel" method="post">
                            <div class="form-group">
                                <label>Start city</label>
                                <input type="text" class="form-control" name="start_city">
                            </div>
                            <div class="form-group">
                                <label>Arrival city</label>
                                <input type="text" class="form-control" name="arrival_city">
                            </div>
                            <div class="form-group">
                                <label>Start date</label>
                                <input type="date" class="form-control" name="start_date">
                            </div>
                            <button type="submit" class="btn btn-warning btn-lg">Search</button>
                        </form>

                    </div>
                </div>





            </div>
        </main>
    </div>


</body>

</html>
