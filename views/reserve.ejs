<!-- views/reserve.ejs -->


<html>
<head>
    <% include layout/head %>
</head>

<body>

    <div class="demo-layout mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">

        <% include layout/header_drawer %>

        <main class="mdl-layout__content">
            <div class="page-content">
                <!-- My content here -->

                <div class="container">
                    <div class="col-sm-6 col-sm-offset-3">

                        <h1>Reserve</h1>
                            <% if (message.length > 0) { %>
                            <div class="info message">
                                <%= message %>
                            </div>
                            <% } %>


                        <p>Make a reservation<br>
                            (try existing ones: pick one in [[1 , 9]]</p>
                        <form action="/reserve" method="post">
                            <div class="form-group mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <label class="mdl-textfield__label">Departure ID</label>
                                <input class="mdl-textfield__input" type="number" class="form-control" name="departure_id">
                            </div>
                            <div class="form-group mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <label class="mdl-textfield__label">Surname</label>
                                <input class="mdl-textfield__input" type="text" class="form-control" name="surname" pattern="[^\d][^\d]+">
                            </div>
                            <div class="form-group mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <label class="mdl-textfield__label">Name</label>
                                <input class="mdl-textfield__input" type="text" class="form-control" name="name" pattern="[^\d][^\d]+">
                            </div>
                            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">Reserve</button>
                        </form>


                    </div>
                </div>





            </div>
        </main>
    </div>


</body>

</html>
